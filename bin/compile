#!/bin/bash
# usage: bin/compile <build-dir> <cache-dir> <env-dir>

set -eo pipefail

function arrow() {
  sed -u 's/^/----->  /'
}

function indent() {
  sed -u 's/^/       /'
}

function cat_or() {
  echo $(cat $1 2>/dev/null || echo $2)
}

BASE_DIR=$PWD
BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

NIM_DIR=$CACHE_DIR/Nim
NIM_BIN=$NIM_DIR/bin/nim

PATH="$NIM_DIR/bin:$NIMBLE_DIR/bin:$PATH"
export PATH

NIMBLE_DIR=$CACHE_DIR/.nimble
NIMBLE_BIN=$NIMBLE_DIR/bin/nimble

if [ ! -x $NIM_BIN ]; then
    nim_repo=$(cat_or $ENV_DIR/NIM_REPO "git://github.com/Araq/Nim.git")
    nim_branch=$(cat_or $ENV_DIR/NIM_BRANCH "master")
    nim_csources=$(cat_or $ENV_DIR/NIM_CSOURCES "git://github.com/nim-lang/csources.git")

    echo "Installing Nim..." | arrow

    git clone --depth 1 --branch $nim_branch $nim_repo $NIM_DIR 1>/dev/null
    cd $NIM_DIR
    git clone --depth 1 $nim_csources csources 1>/dev/null
    cd csources && sh build.sh 1>/dev/null
    cd ..
    bin/nim c koch 1>/dev/null
    ./koch boot -d:release 1>/dev/null


    echo "using #{nim_repo} @#{nim_branch}" | indent
fi

if [ ! -x $NIMBLE_BIN ]; then
    echo "Installing Nimble..." | arrow
    nimble_repo=$(cat_or $ENV_DIR/NIMBLE_REPO "git://github.com/nim-lang/nimble.git")
    git clone --depth 1 $nimble_repo $CACHE_DIR/nimble 1>/dev/null
    cd $CACHE_DIR/nimble
    env HOME=$CACHE_DIR $NIM_BIN c -r src/nimble install 1>/dev/null
fi

cd $BUILD_DIR

echo "Building" | arrow
env HOME=$CACHE_DIR nimble build --accept
